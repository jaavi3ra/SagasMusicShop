<div class="container blog-post mt-lg-0 my-5 mb-5">
  <!-- Page Heading -->
  <div class="row">
    <div class="col-12">
      <h1 class="page-header">{{page.title}}</h1>
    </div>
  </div>
  <!-- /.row -->
  <div class="row">
    <div class="col-12 page">
      {% if page.images.first != blank %}
      <img class="img-fluid" src="{{page.images.first}}" alt="{{page.title | escape}}" />
      {% endif %}
      <div class="page-body">{{page.body}}</div>
    </div>
  </div>
</div>
