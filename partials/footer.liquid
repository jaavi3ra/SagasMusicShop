<footer class="pt-5 pb-3">
  <div class="container">
    <div class="row text-md-left text-center justify-content-center">
      {% if options.show_footer_description %}
      <div class="col-lg-3 col-md-6">
        <h5>{% t "About us" %}</h5>
        <div class="footer-description text-center text-md-left mb-lg-0 mb-3">
          {% if options.footer_description != empty %}
          {{options.footer_description}}
          {% else %}
          <a href="{{store.url}}/admin/themes/options/{{theme.id}}" title="{% t "Click here to add your footer short description" %}">{% t "Click here to add your footer short description" %}</a>
          {% endif %}
        </div>
      </div>
      {% endif %}
      <div class="{% if options.show_footer_description %}col-lg-3 col-md-6{% else %}col-md-4{% endif %} mb-lg-0 mb-4">
        <h5>{% t "Contact" %}</h5>
        <ul>
          {% if options.display_contact_email %}<li><a href="mailto:{{store.email}}" target="_blank" title="{{store.email}}">{{store.email}}</a></li>{% endif %}
          {% if options.phone != blank %}
          <li class="footer-top__menu-item">
            <a href="tel:{{ options.phone | remove:'(' | remove:')' | remove:' ' }}" title="{% t "Call us" %}">{{ options.phone }}</a>
          </li>
          {% endif %}
          {% if store.address != blank %}
          <li class="footer-top__menu-item">
            <a href="https://maps.google.com/maps?q={{ store.address | replace: '#', '' }} {{ store.street_number }},{{ store.city }},{{ store.region }},{{ store.country }}">
            {{ store.address }} {{ store.street_number }}<br>{{store.postal}} {{store.city}}<br>{{store.country}}
            </a>
          </li>
          {% endif %}
        </ul>
      </div>
      <div class="{% if options.show_footer_description %}col-lg-3 col-md-6{% else %}col-md-4{% endif %} mb-lg-0 mb-4">
        <h5>{% t "Menu" %}</h5>
        <ul class="navbar-nav mr-auto">
          {% for item in menu.footer.items %}
          {% include 'footer_menu' with item %}
          {% endfor %}
        </ul>
      </div>
      <div class="{% if options.show_footer_description %}col-lg-3 col-md-6{% else %}col-md-4{% endif %} mb-lg-0 mb-4">
        {% if options.enable_subscribe %}
        <h5>{% t "Subscribe to Our Newsletter!" %}</h5>
        <div id="newsletter">
          <form {% if options.mailchimp_post_url != blank %}action="{{ options.mailchimp_post_url }}"{% endif %} method="post" id="mc-embedded-subscribe-form" name="mc-embedded-subscribe-form" class="validate" target="_blank" novalidate>
            <div id="mc_embed_signup_scroll">
              <div class="form-group mb-0">
                <!-- Begin MailChimp Signup Form -->
                <input type="email" id="mce-EMAIL" class="email field form-control footer-subscribe__email" name="EMAIL" placeholder="{% t 'Enter your E-mail' %}" required>
                <button type="submit" id="mc-embedded-subscribe" class="btn btn-link p-0 footer-subscribe__button" name="subscribe"><i class="far fa-envelope"></i></button>
                <!-- end .footer-subscribe__field -->

                <!-- real people should not fill this in and expect good things - do not remove this or risk form bot signups-->
                <div style="position: absolute; left: -5000px;" aria-hidden="true"><input type="text" name="b_37d0843fc21a18eccb8d392eb_f7037d65c5" tabindex="-1" value=""></div>
              </div>
              {% if options.newsletter_text != blank %}<small>{{options.newsletter_text}}</small>{% endif %}
            </div>
          </form>
        </div>
        {% endif %}
        {% if social.facebook.url != blank or social.twitter.url != blank or social.pinterest.url != blank or social.instagram.url != blank or social.whatsapp.url != blank %}
        {% if options.enable_subscribe == blank %}
        <h5>{% t "Follow Us" %}</h5>
        {% endif %}
        <ul class="list-inline social-footer my-3">
          {% if options.enable_subscribe %}
          <li class="list-inline-item">
            <strong>{% t "Follow Us" %}:</strong>
          </li>
          {% endif %}
          {% if social.facebook.url != blank %}
          <li class="list-inline-item">
            <a href="{{social.facebook.url}}" title="{% t 'Go to' %} Facebook" target="_blank">
              <i class="fab fa-facebook"></i>
            </a>
          </li>
          {% endif %}
          {% if social.twitter.url != blank %}
          <li class="list-inline-item">
            <a href="{{social.twitter.url}}" title="{% t 'Go to' %} Twitter" target="_blank">
              <i class="fab fa-twitter-square"></i>
            </a>
          </li>
          {% endif %}
          {% if social.pinterest.url != blank %}
          <li class="list-inline-item">
            <a href="{{social.pinterest.url}}" title="{% t 'Go to' %} Pinterest" target="_blank">
              <i class="fab fa-pinterest-square"></i>
            </a>
          </li>
          {% endif %}
          {% if social.instagram.url != blank %}
          <li class="list-inline-item">
            <a href="{{social.instagram.url}}" title="{% t 'Go to' %} Instagram" target="_blank">
              <i class="fab fa-instagram"></i>
            </a>
          </li>
          {% endif %}
          {% if social.whatsapp.url != blank %}
          <li class="list-inline-item d-md-none">
            <a href="{{ social.whatsapp.url }}&text={% t 'Hello'%} {{store.name}}!" title="WhatsApp" target="_blank">
              <i class="fab fa-whatsapp fa-fw"></i>
            </a>
          </li>
          {% endif %}
          {% if social.youtube.url != blank %}
          <li class="list-inline-item">
            <a href="{{ social.youtube.url }}" title="Youtube" target="_blank">
              <i class="fab fa-youtube fa-fw"></i>
            </a>
          </li>
          {% endif %}
          {% if social.tiktok.url != blank %}
          <li class="list-inline-item">
            <a href="{{social.tiktok.url}}" class="trsn" title="{% t 'Go to' %} Tiktok" target="_blank">
              <i class="fab fa-tiktok fa-fw"></i>
            </a>
          </li>
          {% endif %}
        </ul>
        {% else %}
        <h5 class="mt-3">{% t "Follow Us" %}</h5>
        <ul>
          <li>
            <a href="{{store.url}}/admin/settings/general">{% t "Click here to add your social networks links" %}</a>
          </li>
        </ul>
        {% endif %}
      </div>


    </div>
  </div>
  <hr class="mb-3">
  <div class="container-fluid">
    <div class="row align-items-center">
      <div class="col-md-4 text-lg-left text-center mb-lg-0 mb-3">
        <div class="powered-by">&copy; {{ 'now' | date: "%Y" }} {{store.name}}. <br>{% t "All Rights Reserved." %} {{powered_by}}</div>
      </div>
      <div class="col-md-4 text-center">
        <a href="{{store.url}}" title="{{store.name}}">
          {% if options.logo_footer != blank %}
          <img src="{{ options.logo_footer }}" alt="{{store.name}}" class="navbar-brand img-fluid mx-auto p-0 pb-3"/>
          {% elsif store.logo != empty %}
          <img src="{{store.logo}}" class="navbar-brand img-fluid mb-md-0 mb-3 mx-auto" alt="{{store.name}}" />
          {% else %}
          {% if template == 'home' %}
          <span class="text-logo mb-md-0 mb-3 d-block mx-auto">{{store.name}}</span>
          {% else %}
          <span class="navbar-brand mb-md-0 mb-3 d-block mx-auto">{{store.name}}</span>
          {% endif %}
          {% endif %}
        </a>
      </div>
      <div class="col-md-4">
        {% include 'payment_options' %}
      </div>
    </div>
  </div>

</footer>
